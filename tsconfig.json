{
	"compilerOptions": {
		"composite": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"jsx": "react-jsx",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"types": ["jest"]
	},
	"include": [
		"vite.config.ts",
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.test.ts",
		"src/**/*.test.tsx"
	]
}
